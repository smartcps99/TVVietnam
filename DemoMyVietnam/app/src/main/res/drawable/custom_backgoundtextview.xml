<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <!-- set the shadow color here -->
            <stroke
                android:width="1dp"
                android:color="#77BE3232" />
            <!-- setting the thickness of shadow (positive value will give shadow on that side) -->
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <item>
        <shape>

            <solid  android:color="#FFA101"/>
            <stroke android:color="#C9C9C9" android:width="1dp"/>
            <corners android:radius="@dimen/_5sdp" />
            <gradient android:startColor="#32704155"
                android:angle="45"
                android:endColor="#720091EA"
                android:centerColor="#8D6A80FF"/>
        </shape>
    </item>
    <item android:drawable="?attr/selectableItemBackground"/>
</layer-list>