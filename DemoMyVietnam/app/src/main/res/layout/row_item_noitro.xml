<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="center"
    android:background="@drawable/custom_vien"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="@dimen/_15sdp"
        android:src="@drawable/ic_noitro"
        android:id="@+id/noitro_hinh"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />
    <LinearLayout
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:textColor="#f000"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/noitro_ten_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"/>

        <TextView
            android:textColor="#7C7C7C"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/noitro_gia_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle1"/>
        <TextView
            android:textColor="#868686"
            android:textSize="@dimen/_10sdp"
            android:id="@+id/noitro_diachi_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subtitle2"/>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>